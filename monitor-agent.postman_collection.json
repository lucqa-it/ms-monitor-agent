	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// L칩gica de Cifrado E2E",
					"const publicKey = pm.environment.get(\"serverPublicKey\");",
					"const apiKey = pm.environment.get(\"apiKey\");",
					"",
					"if (!publicKey) {",
					"    console.log(\"丘멆잺 No Public Key found. Run '/auth/handshake' first!\");",
					"    // Fallback opcional a clave plana si no hay p칰blica (para debug)",
					"    // pm.environment.set(\"encryptedToken\", apiKey);",
					"} else {",
					"    // Importar librer칤a forge (Postman sandbox la incluye)",
					"    const forge = require('node-forge');",
					"    ",
					"    try {",
					"        const publicKeyObj = forge.pki.publicKeyFromPem(publicKey);",
					"        const encrypted = publicKeyObj.encrypt(apiKey, 'RSA-OAEP', {",
					"            md: forge.md.sha256.create(),",
					"            mgf1: { md: forge.md.sha1.create() }",
					"        });",
					"        const encryptedBase64 = forge.util.encode64(encrypted);",
					"        ",
					"        pm.environment.set(\"encryptedToken\", encryptedBase64);",
					"        console.log(\"游 Token encrypted successfully\");",
					"    } catch (e) {",
					"        console.error(\"Encryption failed:\", e);",
					"    }",
					"}"
				]
			}
		}
	],
